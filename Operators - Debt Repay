import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int amount=sc.nextInt();
        int rate=sc.nextInt();
        int year=sc.nextInt();
        float interest=(amount*rate*year)/100;
        float am=(float)amount+interest;
        float discount =(float) 0.02*interest;
        float disrate=(float)am-discount;
        System.out.printf("%.2f\n",interest);
        System.out.printf("%.2f\n",am);
        System.out.printf("%.2f\n",discount);
        System.out.printf("%.2f\n",disrate);
        
        
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
